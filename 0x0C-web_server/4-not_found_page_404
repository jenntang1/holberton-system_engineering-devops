#!/usr/bin/env bash
# This bash script redirects client to 404.
apt update
apt -y install nginx
ufw allow 'Nginx Full'
echo 'Holberton School' | sudo tee /var/www/html/index.nginx-debian.html
var="rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;"
sed -i "35i$var" /etc/nginx/sites-available/default
echo "Ceci n'est pas une page" | sudo tee /var/www/html/custom404.html
var2="error_page 404 /custom404.html;"
sed -i "36i$var2" /etc/nginx/sites-available/default
service nginx start
